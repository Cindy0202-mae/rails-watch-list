<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card-body">
        <h1 class="card-title"><%= @list.name %></h1>
        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="card-body">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <div class="form-group">
            <%= f.input :movie_id, collection: @movies.map { |movie| [movie['title'], movie['id']] }, prompt: "Choose a movie", label: 'Movie', input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :comment, label: 'Comment', input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.button :submit, 'Create Bookmark', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Bookmarks</h2>
      <ul>
        <%# <p>Nothing</p> %>
        <% @list.bookmarks.each do |bookmark| %>
          <li>
            <strong>Movie:</strong> <%= bookmark.movie.title %> <br>
            <strong>Comment:</strong> <%= bookmark.comment %>
            <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
